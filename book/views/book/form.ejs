<form method="POST" class="mt-5">
  <div class="form-group">
    <label for="inputTitle">Заголовок</label>
    <input
      type="text"
      value="<%= book.title %>"
      name="title"
      class="form-control"
      id="inputTitle"
    />
  </div>

  <div class="form-group">
    <label for="inputTitle">Автор</label>
    <input
      type="text"
      value="<%= book.authors%>"
      name="authors"
      class="form-control"
      id="inputTitle"
    />
  </div>

  <div class="form-group">
    <label for="inputTitle">Бестселлер</label>
    <input
      type="checkbox"
      value="<%= book.favorite%>"
      name="favorite"
      id="inputTitle"
    />
  </div>

  <% if(!book.fileBook) { %>
  <div class="input-group mb-3">
    <div class="custom-file">
      <input type="file" class="custom-file-input" name="fileBook" id="fileBook" />
      <label class="custom-file-label" for="fileBook"
        >Загрузть книги</label>
    </div>
  </div>
  <% } %>

  <div class="form-group">
    <label for="inputDesc">Описание</label>
    <textarea rows="3" name="description" class="form-control" id="inputDesc">
<%= book.description%></textarea
    >
  </div>

  <div class="form-group text-right">
    <button type="submit" class="btn btn-primary">Сохранить</button>
  </div>
</form>
